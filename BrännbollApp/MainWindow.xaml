<Window x:Class="BrännbollApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrännbollApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="370" SizeToContent="WidthAndHeight">

    <StackPanel Margin="10">
        <Label FontSize="16" FontWeight="Bold">Brännbollsräknare</Label>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Label>Lag inne:</Label>
            <TextBox FontSize="18" FontWeight="Bold" Name="tbxLagInne" Width="50" IsReadOnly="True"></TextBox>
            <Label>Lag ute:</Label>
            <TextBox FontSize="18" FontWeight="Bold" Name="tbxLagUte" Width="50" IsReadOnly="True"></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="5">
            <Button Width="100" Click="KlickFrivarv" Margin="10">Frivarv</Button>
            <Button Width="100" Click="KlickBränning" Margin="10">Bränning</Button>
            <Button Width="100" Click="KlickLyra" Margin="10">Lyra</Button>
            <Button Width="100" Click="KlickVarv" Margin="10">Varv</Button>
        </StackPanel> 

        <Label FontSize="14" FontWeight="Bold">Historik</Label>
        <ListBox Name="txbHistorik" Height="100" Width="330"></ListBox>

    </StackPanel>
</Window>
