<Window x:Class="AreaApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AreaApp"
    mc:Ignorable="d"
    Title="MainWindow" Height="300" Width="250"
    SizeToContent="WidthAndHeight" FontWeight="Bold" Background="Teal">

    <StackPanel Margin="20">
        <Label>Ange bredd:</Label>
<TextBox Name="txbBredd"></TextBox>

<Label>Ange höjd:</Label>
<TextBox
            Name="txbHojd"></TextBox>

<Button Click="KlickRäknaUt" Background="LightBlue"
            Margin="10 10 0 10">Räkna ut</Button>

<Label>Area:</Label>
<TextBox Name="txbArea"
            IsReadOnly="True"></TextBox>

<Button Click="Rensar">Rensa</Button>


    </StackPanel>


</Window>